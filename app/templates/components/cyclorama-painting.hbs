        <section class='uk-margin'>

          <article class='uk-article description uk-padding'>
        <h2 style='text-transform: uppercase;'>{{activeHotspot.name}}</h2>
            {{{activeHotspot.description}}}
          </article>
        </section>
        <section uk-grid>
          {{#if activeHotspot.previous}}
            {{#uk-button class='uk-hidden@s uk-width-1-3@m' on-click=(action 'previous' activeHotspot.previous)}}previous{{/uk-button}}
          {{/if}}
          {{#uk-button class='uk-width-1-1@s uk-width-1-3@m' on-click=(action 'reCenter' activeHotspot.previous)}}close{{/uk-button}}
          {{#if activeHotspot.next}}
            {{#uk-button class='uk-hidden@s uk-width-1-3@m' on-click=(action 'next' activeHotspot.next)}}Next{{/uk-button}}
          {{/if}}
        </section>
      {{/if}}
      </div>
    </div>

        {{#leaflet-map
          onLoad=(action 'initMap')
          onResize=(action 'reSize')
          bounds=bounds
          zoomSnap=0
          maxBounds=bounds
          bounceAtZoomLimits=false
          maxBoundsViscosity=1.0
          maxZoom=10
          crs=crs
          bounceAtZoomLimits=false

          as |features|}}

          {{!-- {{draw-control}} --}}

          {{features.tile
            url='https://s3.amazonaws.com/battleofatlanta/tiles/q1/{z}/{x}/{y}.png'
            onLoad=(action 'paintingLoaded')
            bounds=bounds
            minZoom=3
          }}

          {{painting-pois
            pois=activePois
            highlight=(action 'highlightHotspot')
          }}

        {{/leaflet-map}}

