{{yield}}
{{#poi-detail}}
    <div class='uk-offcanvas-bar uk-flex uk-flex-column uk-overflow-hidden'>
      {{#each model.pois as |poi|}}
        {{#if poi.active}}
          <div class='poi-detail-content uk-child-width-1-1 uk-overflow-auto' uk-grid>
            <section class='uk-margin'>
              <article class='uk-article description uk-padding'>
                <h2 style='text-transform: uppercase;'>{{poi.name}}</h2>
                {{{poi.description}}}
              </article>
            </section>

            {{#if poi.images}}
            <section>
              <div class="uk-position-relative uk-visible-toggle uk-light" uk-slider center=true>
                <ul class="uk-slider-items uk-grid uk-child-width-3-4" uk-grid>
                  {{#each poi.images as |image|}}
                    <li>
                      <div class="uk-panel uk-text-center">
                        <img src={{image.url}} alt="">
                      </div>
                    </li>
                  {{/each}}
                </ul>

                <a class="uk-position-center-left uk-position-small gallery-arrow" href='' uk-slider-item="previous">
                  {{fa-icon 'angle-left'}}
                </a>
                <a class="uk-position-center-right uk-position-small gallery-arrow" href='' uk-slider-item="next">
                  {{fa-icon 'angle-right'}}
                </a>
                <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
              </div>
            </section>
            {{/if}}
          </div>
          <nav class='poi-detail-nav uk-child-width-1-3 uk-margin' uk-grid>
            <div>
              {{#if poi.previous}}
                {{#uk-button color='primary' on-click=(action 'goTo' poi.previous)}}
                  {{fa-icon 'angle-left'}} {{poi.previous.name}}
                {{/uk-button}}
              {{/if}}
            </div>
            <div>
              {{#uk-button color='secondary' on-click=reCenter}}
                {{fa-icon 'undo'}} Return to Painting
              {{/uk-button}}
            </div>
            <div>
              {{#if poi.next}}
                {{#uk-button color='primary' on-click=(action 'goTo' poi.next)}}
                  {{poi.next.name}} {{fa-icon 'angle-right'}}
                {{/uk-button}}
              {{/if}}
            </div>
          </nav>
        {{/if}}
      {{/each}}
    </div>
  {{/poi-detail}}