            )
          }} --}}

        {{/leaflet-map}}

      </div>
</div>
      <div class='uk-width-1-1 bottom-nav uk-container'>
        <div uk-grid>
          <div class='uk-width-1-4 ahc-logo uk-inline'>
            <img class='uk-position-center' src='http://www.atlantahistorycenter.com/assets/images/AHC_Brand_Asset_Lockup_White.png'>
          </div>
          
          <div class='uk-width-1-2'>
            <div class='poi-nav' uk-grid>
              
              {{#each buttons as |button|}}
              <div class='uk-width-1-4 poi-nav-button uk-inline {{if button.active 'active-poi'}}' role='button' onclick={{action 'switchPoi' button}}>
                <div class='uk-text-center uk-grid-collapse uk-position-center' uk-grid>
                  <img class='uk-width-1-1 uk-border-circle' src={{button.icon}} alt={{concat 'Button to highlight ' button.lable ' in the painting.'}}>
                  <p class='uk-width-1-1 uk-margin-small-top'>{{button.label}}</p>
                </div>
              </div>
              {{/each}}
              
              <div class='uk-width-1-4 poi-nav-button uk-inline' style='border-left: solid white; line-height: 20px;'>
                <div class='uk-text-center uk-grid-collapse uk-position-center active-poi' uk-grid>
                  <img class='uk-width-1-1 uk-border-circle' src="images/tours.png" alt="Border circle">
                  <p class='uk-width-1-1 uk-margin-small-top'>TOURS</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class='uk-width-1-4 uk-margin-small'>
            <div class='uk-grid-collapse active-poi' uk-grid>
              <div class='uk-width-1-2'>
                <img src='/images/view.png' style='height: 90px'>
              </div>
              <div class='uk-width-1-2' id='minimap'></div>
            </div>
          </div>
        </div>
      </div>
    </div>


{{/if}}
