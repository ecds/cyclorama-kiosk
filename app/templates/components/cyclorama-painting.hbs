{{#if bounds}}
    <div uk-grid class='uk-grid-collapse'>
  <div class='uk-offcanvas-content'>
    <div id='panel'>
      <div class='uk-offcanvas-bar uk-flex uk-flex-column'>
        <button class="uk-offcanvas-close" type="button" uk-close onclick={{action 'reCenter'}}></button>
        <h2>{{activeHotspot.name}}</h2>
        <section>
          {{{activeHotSpot.description}}}
        </section>
        <section uk-grid>
          {{#uk-button class='uk-width-1-2' on-click=(action 'previous' activeHotSpot.index)}}previous{{/uk-button}}
          {{#uk-button class='uk-width-1-2' on-click=(action 'next' activeHotSpot.index)}}Next{{/uk-button}}
        </section>
      </div>
    </div>

      <div class='painting-container uk-width-1-1'>
        {{#leaflet-map
          onLoad=(action 'initMap')
          onResize=(action 'reSize')
          bounds=bounds
          zoomSnap=0
          maxBounds=bounds
          bounceAtZoomLimits=false
          maxBoundsViscosity=1.0
          minZoom=3
          maxZoom=10
          crs=crs
          bounceAtZoomLimits=false
          onClick=(action 'reCenter')
          onZoomend=(action 'whatBounds')
          as |features|}}

          {{draw-control}}

          {{features.tile
            url='https://s3.amazonaws.com/battleofatlanta/tiles/q1/{z}/{x}/{y}.png'
            onLoad=(action 'paintingLoaded')
          }}

          {{painting-pois
            pois=activePois
            highlight=(action 'highlightHotspot')
            flyToPoi=(action 'flyToHotspot')
          }}

          {{!-- {{features.marker
            lat=-62.89937553341878
