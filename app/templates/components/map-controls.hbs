<div class='uk-child-width-1-4' uk-grid>
  <div></div>

  {{!-- Zoom Controls --}}
  <div class='uk-flex uk-flex-center uk-flex-middle'>
    <div class='uk-width-1-4 uk-grid-small' uk-grid>
      <div class='uk-width-1-1 uk-flex uk-flex-center uk-flex-bottom'>
        {{#uk-button size='small' color='secondary' on-click=(action 'zoom' 'in')}}{{fa-icon 'plus'}}{{/uk-button}}
      </div>
      <div class='uk-width-1-1 uk-flex uk-flex-center uk-flex-top'>
        {{#uk-button size='small' color='secondary' on-click=(action 'zoom' 'out')}}{{fa-icon 'minus'}}{{/uk-button}}
      </div>
    </div>
  </div>

  {{!-- Pan Controls --}}
